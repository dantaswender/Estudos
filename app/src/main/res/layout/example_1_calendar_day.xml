<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayOfCalendar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@drawable/example_5_selected_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/exOneDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/dayTax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="22"/>

    <View
        android:id="@+id/dayTax"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/example_4_single_selected_bg"
        android:backgroundTint="@color/blue_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exOneDayText" />

</androidx.constraintlayout.widget.ConstraintLayout>


